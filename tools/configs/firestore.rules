rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Restaurant data - public read, authenticated write
    match /restaurants/{restaurantId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // Restaurant analytics - owner only
      match /analytics/{analyticsId} {
        allow read, write: if request.auth != null && 
          resource.data.ownerId == request.auth.uid;
      }
    }
    
    // Location analysis - authenticated users only
    match /location_analysis/{analysisId} {
      allow read, write: if request.auth != null;
    }
    
    // Market reports - authenticated users only
    match /market_reports/{reportId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Public data - anyone can read
    match /public_data/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Admin only collections
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}
